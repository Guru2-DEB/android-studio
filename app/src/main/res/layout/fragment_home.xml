<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#1E1F23"
  android:orientation="vertical"
  tools:context=".HomeFragment">

  <androidx.cardview.widget.CardView
    android:id="@+id/Record"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="#28292D" >

    <TextView
      android:id="@+id/RexTxt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/sansationregular"
      android:text="Record"
      android:layout_marginTop="35dp"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="34sp" />

    <View
      android:id="@+id/view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <ImageView
      android:id="@+id/Total"
      android:layout_width="135dp"
      android:layout_height="61dp"
      android:layout_marginLeft="45dp"
      android:layout_marginTop="100dp"
      android:src="@drawable/rounded_bg" />

    <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="120dp"
      android:fontFamily="@font/sansationregular"
      android:text="Total"
      android:textAlignment="center"
      android:textColor="#Ffffff"
      android:textSize="16sp" />

    <ImageView
      android:id="@+id/Todo"
      android:layout_width="206dp"
      android:layout_height="61dp"
      android:layout_marginLeft="201dp"
      android:layout_marginTop="100dp"
      android:src="@drawable/rounded_bg" />

    <TextView
      android:id="@+id/textView2"
      android:layout_width="77dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="225dp"
      android:layout_marginTop="112dp"
      android:fontFamily="@font/sansationregular"
      android:text=" Today's Progress"
      android:textAlignment="center"
      android:textColor="#Ffffff"
      android:textSize="16sp" />

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:id="@+id/NewNews"
    android:layout_width="match_parent"
    android:layout_height="323dp"
    app:cardBackgroundColor="#28292D"
    app:cardElevation="2dp">

    <ImageView
      android:id="@+id/NewNewsSq"
      android:layout_width="357dp"
      android:layout_height="190dp"

      android:layout_marginLeft="44dp"
      android:layout_marginTop="110dp"
      android:src="@drawable/rounded_bg" />

    <TextView
      android:id="@+id/NewTxt"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="40dp"
      android:ems="10"
      android:fontFamily="@font/sansationregular"
      android:inputType="text"
      android:text="Recommand News"
      android:textAlignment="center"
      android:textColor="#ffffff"
      android:textSize="34sp" />

    <Button
      android:id="@+id/NewNewsBtn"
      android:layout_width="245dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100dp"
      android:layout_marginTop="235dp"
      android:background="#9E26F3"
      android:fontFamily="@font/sansationregular"
      android:text="News Detail"
      android:textSize="24sp" />

  </androidx.cardview.widget.CardView>
</LinearLayout>
